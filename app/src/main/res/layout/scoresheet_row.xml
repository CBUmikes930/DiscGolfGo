<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_marginVertical="2dp">
        <EditText
            android:id="@+id/scoresheet_name"
            android:text="Name"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:layout_width="0dp"
            android:layout_weight="0.25" />
        <EditText
            android:id="@+id/scoresheet_hole1"
            android:inputType="number"
            android:text="1"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole2"
            android:inputType="number"
            android:text="2"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole3"
            android:inputType="number"
            android:text="3"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole4"
            android:inputType="number"
            android:text="4"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole5"
            android:inputType="number"
            android:text="5"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole6"
            android:inputType="number"
            android:text="6"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole7"
            android:inputType="number"
            android:text="7"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole8"
            android:inputType="number"
            android:text="8"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <EditText
            android:id="@+id/scoresheet_hole9"
            android:inputType="number"
            android:text="9"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.07" />
        <TextView
            android:id="@+id/scoresheet_total"
            android:text="Total"
            android:textSize="14sp"
            android:textAlignment="viewEnd"
            android:layout_width="0dp"
            android:layout_weight="0.12" />
    </TableRow>

</TableLayout>